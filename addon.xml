<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.madeo.rs232server"
       name="Rs232Server"
       version="0.5"
       provider-name="Brendan Le Foll">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
  </requires>
  <extension point="xbmc.service"
             library="service.py" start="login|startup">
  <extension point="xbmc.script"
             library="kodiclient.py">
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en_GB">Provides integration with rs232server for amplifier/tv control over RS232.</summary>
    <source>https://github.com/arfoll/service.madeo.rs232server</source>
    <license>GNU GENERAL PUBLIC LICENSE. Version 2</license>
  </extension>
</addon>
